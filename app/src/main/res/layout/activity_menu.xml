<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradient"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="0dp">
            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/poppins_baru"
                android:text="Selamat Datang"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="230dp"
                android:background="@drawable/bordered"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bordered">
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        app:cardBackgroundColor="#1B2083"
                        android:background="@drawable/rectangle">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/moneyyy2"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pendapatan"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/poppins_baru"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="30dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp. 0"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_baru"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="15dp"/>
                            </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atur Target"
                            android:fontFamily="@font/poppins_baru"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendapatan Yuk"
                            android:fontFamily="@font/poppins_baru"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Klik disini untuk mengatur target"
                            android:fontFamily="@font/poppins_baru"
                            android:textSize="9dp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:background="@drawable/bordered">
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/duit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:background="@drawable/bordered">
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/karyawan"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:background="@drawable/bordered">
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/stock"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:background="@drawable/bordered">
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/gaji"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_marginLeft="21dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Penjualan"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_baru"/>
                    <TextView
                        android:layout_marginLeft="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karyawan"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_baru"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STOCK"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_baru"/>
                    <TextView
                        android:layout_marginLeft="42dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gaji"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_baru"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Record Penjualan"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_baru"
                android:textColor="#3F4396"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JANUARY"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#3F4396"/>
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/bordered">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.etebarian.meowbottomnavigation.MeowBottomNavigation
                    android:layout_marginTop="30dp"
                    android:id="@+id/bottomnavi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mbn_backgroundBottomColor="#ffffff"
                    app:mbn_circleColor="#ffffff"
                    app:mbn_countBackgroundColor="#ff6f00"
                    app:mbn_countTextColor="#ffffff"
                    app:mbn_defaultIconColor="#90a4ae"
                    app:mbn_rippleColor="#2f424242"
                    app:mbn_selectedIconColor="#3c415e"
                    app:mbn_shadowColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
